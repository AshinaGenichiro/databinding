<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatabindingZad3.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="{Binding Height, StringFormat='Wzrost: {0:F2} m'}"
                HorizontalOptions="Center"
                />
            <Slider    
                Minimum="1"
                Maximum="2.5"
                Value="{Binding Height}"
                />
            <Label
                HorizontalOptions="Center"
                Text="{Binding Weight, StringFormat='Waga: {0:F2} kg'}"
                />
            <Slider 
                Minimum="30"
                Maximum="200"
                Value="{Binding Weight}"
                />
            <Label
                Text="{Binding Bmi, StringFormat='Bmi wynosi: {0:F2}'}"
                />
            <Label
                Text="{Binding Category, StringFormat='Masz: {0}'}"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>